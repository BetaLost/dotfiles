[global]
	# Colors
	frame_color = "__COL1__"
	background = "__LIGHTERBG__"
	foreground = "__FG__"
	highlight = "__COL4__"

	# Display notifications on monitor with mouse focus
	follow = mouse
	
	# Geometry
	width = 300
	height = 80
	offset = 10x10
		
	font = JetBrainsMono Nerd Font Medium 10
	
	# Markup parsing
	markup = full
	format = "<b>%s</b>\n%b"
	
	alignment = center
	vertical_alignment = center
	
	# Split notifications into multiple lines
	word_wrap = false
	
	# Hide number of duplicate notifications
	hide_duplicate_count = true
	
	# Disable icons
	icon_position = off
	
	# Round corners
	corner_radius = 10
	progress_bar_corner_radius = 3

	# Close one notification
	close = ctrl+space
	
	# Close all notifications
	close_all = ctrl+shift+space

[urgency_normal]
	timeout = 5

[urgency_critical]
	timeout = 0
